<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ProductCart.MAUI.ViewModels"
             x:Class="ProductCart.MAUI.Views.ProductDetailsPage"
             x:DataType="viewmodels:ProductDetailsViewModel"
             Title="{Binding Title}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Loading Indicator -->
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                             IsVisible="{Binding IsBusy}"
                             Color="{StaticResource Primary}"
                             HeightRequest="50"/>

            <!-- Error Message -->
            <Label Text="{Binding ErrorMessage}"
                   IsVisible="{Binding HasError}"
                   TextColor="Red"
                   FontSize="16"
                   HorizontalOptions="Center"/>

            <!-- Product Details -->
            <VerticalStackLayout IsVisible="{Binding Product, Converter={StaticResource IsNotNullConverter}}"
                               Spacing="15">

                <!-- Product Name -->
                <Frame BackgroundColor="{StaticResource Primary}"
                       Padding="15"
                       CornerRadius="10">
                    <Label Text="{Binding Product.Name}"
                           TextColor="White"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>
                </Frame>

                <!-- Details Grid -->
                <Grid RowDefinitions="Auto,Auto,Auto,Auto"
                      ColumnDefinitions="120,*"
                      RowSpacing="15">

                    <!-- ID -->
                    <Label Grid.Row="0" Grid.Column="0"
                           Text="ID:"
                           FontSize="16"
                           FontAttributes="Bold"/>
                    <Label Grid.Row="0" Grid.Column="1"
                           Text="{Binding Product.Id}"
                           FontSize="16"/>

                    <!-- Category -->
                    <Label Grid.Row="1" Grid.Column="0"
                           Text="Category:"
                           FontSize="16"
                           FontAttributes="Bold"/>
                    <Label Grid.Row="1" Grid.Column="1"
                           Text="{Binding Product.CategoryName}"
                           FontSize="16"/>

                    <!-- Price -->
                    <Label Grid.Row="2" Grid.Column="0"
                           Text="Price:"
                           FontSize="16"
                           FontAttributes="Bold"/>
                    <Label Grid.Row="2" Grid.Column="1"
                           Text="{Binding Product.DisplayPrice}"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}"/>

                    <!-- Quantity (from Lab 1 details endpoint) -->
                    <Label Grid.Row="3" Grid.Column="0"
                           Text="In Stock:"
                           FontSize="16"
                           FontAttributes="Bold"/>
                    <Label Grid.Row="3" Grid.Column="1"
                           Text="{Binding Product.Quantity}"
                           FontSize="16"
                           TextColor="Green"/>
                </Grid>

				<StackLayout Spacing="10" Margin="0,20,0,0">

					<!-- Quantity Selector -->
					<Label Text="Quantity to Add:"
                           FontSize="16"
                           FontAttributes="Bold"/>

					<HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
						<Button Text="-"
                                Command="{Binding DecreaseQuantityCommand}"
                                WidthRequest="50"
                                HeightRequest="50"
                                FontSize="20"
                                BackgroundColor="{StaticResource Secondary}"/>

						<Label Text="{Binding QuantityToAdd}"
                               FontSize="24"
                               FontAttributes="Bold"
                               VerticalOptions="Center"
                               WidthRequest="60"
                               HorizontalTextAlignment="Center"/>

						<Button Text="+"
                                Command="{Binding IncreaseQuantityCommand}"
                                WidthRequest="50"
                                HeightRequest="50"
                                FontSize="20"
                                BackgroundColor="{StaticResource Secondary}"/>
					</HorizontalStackLayout>

					<!-- Add to Cart Button -->
					<Button Text="🛒 Add to Cart"
                            Command="{Binding AddToCartCommand}"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            FontSize="18"
                            FontAttributes="Bold"
                            HeightRequest="60"
                            CornerRadius="15"
                            Margin="0,10,0,0"/>

					<!-- View Cart Button -->
					<Button Text="View Cart"
                            Command="{Binding ViewCartCommand}"
                            BackgroundColor="{StaticResource Secondary}"
                            TextColor="White"
                            FontSize="16"
                            HeightRequest="50"
                            CornerRadius="10"/>
				</StackLayout>

            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
    